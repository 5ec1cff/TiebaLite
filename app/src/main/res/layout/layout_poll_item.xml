<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.huanchengfly.tieba.post.widgets.theme.TintCheckBox
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/poll_checkbox"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"/>
    <com.huanchengfly.tieba.post.widgets.theme.TintTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poll_item_desc"
        app:layout_constraintStart_toEndOf="@id/poll_checkbox"
        app:layout_constraintBaseline_toTopOf="parent"/>
    <com.huanchengfly.tieba.post.widgets.theme.TintProgressBar
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginHorizontal="2dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/poll_percentage"
        app:layout_constraintTop_toBottomOf="@id/poll_item_desc"
        app:layout_constraintStart_toEndOf="@id/poll_checkbox"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>